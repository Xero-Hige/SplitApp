<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingEnd="8dp"
    android:paddingStart="15dp"
    android:paddingTop="5dp">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/chat_user_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:baselineAlignBottom="false"
        android:elevation="10dp"
        android:src="@drawable/logo_b"
        app:border="true"
        app:border_color="@color/accent"
        app:border_width="2dp"
        app:shadow="true" />

    <com.pkmmte.view.CircularImageView
        android:id="@+id/chat_friend_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:baselineAlignBottom="false"
        android:elevation="10dp"
        android:src="@drawable/logo_a"
        app:border="true"
        app:border_color="@color/accent"
        app:border_width="2dp"
        app:shadow="true" />

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/debt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_toEndOf="@+id/chat_friend_img">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:text="$250"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>