<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ar.uba.fi.splitapp.NewEventDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Nombre del Evento"/>

        <RelativeLayout
            android:id="@+id/add_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/group_add"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:text="Agregar participante"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary_text"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/location"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/add_friend"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/pencil"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="UbicaciÃ³n"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Evento"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText5"
            android:id="@+id/layout_fecha"
            android:layout_alignParentStart="true">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/editText3"
                android:textSize="@dimen/activity_vertical_margin"
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/clock"
                android:layout_marginTop="45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_hora"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout_fecha">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/clock"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/hora"
                android:textSize="@dimen/activity_vertical_margin"
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/imageView7"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView7" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
